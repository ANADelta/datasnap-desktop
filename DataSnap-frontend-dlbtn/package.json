
{
  "name": "data-wrangler",
  "version": "1.0.0",
  "description": "Professional data cleaning and analysis tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"npm run dev:backend\" \"electron .\"",
    "dev:backend": "cd app/backend && python app.py"
  },
  "keywords": [
    "data",
    "cleaning",
    "analysis",
    "pandas",
    "flask",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0"
  },
  "build": {
    "appId": "com.yourcompany.datasnap",
    "productName": "DataSnap",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js"
    ],
    "extraResources": [
      {
        "from": "build-py/dist/",
        "to": "app-backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
